{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block h1 %}Login{% endblock %}

{% block body %}
    <div class="row align-items-center justify-content-center mt-5 ">
        {% if error %}
            <div class="alert alert-danger">
                 {{ error.messageKey }}
            </div>
        {% endif %}
        <div class="col-10 col-md-8 col-lg-4 col-xs-10 bg-light p-3 m-2 shadow">
            <form action="{{ path("login") }}" method="post">
                <div class="form-group">
                    <label for="_username">Username: </label>
                    <input type="text" required name="_username" id="_username" class="form-control" placeholder="Insert your username">
                </div>
                <div class="form-group">
                    <label for="_password">Password: </label>
                    <input type="password" required name="_password" id="_password" class="form-control" placeholder="Insert your password">
                </div>
                <div class="row justify-content-center align-items-center">
                    <input type="submit" class="btn btn-primary rounded-pill w-75" value="Login">
                </div>
            </form>
        </div>
    </div>


{% endblock %}
