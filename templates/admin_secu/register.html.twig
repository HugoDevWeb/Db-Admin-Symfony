{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block h1 %}Registration{% endblock %}

{% block body %}
<div class="row align-items-center justify-content-center mt-5 ">
  <div class="col-10 col-md-8 col-lg-4 col-xs-10 bg-light p-3 m-2 shadow">
    {{ form_start(form) }}
    {{ form_row(form.username, {
      "attr": {
        "placeholder": "Saisir votre identifiant",
      },
      "label": "Votre nom"
    }) }}

    {{ form_row(form.password, {
      "attr": {
        "placeholder": "Saisir votre mot de passe "
      },
      "label": "Mot de passe"
    }) }}

    {{ form_row(form.passwordConfirm, {
      "attr": {
        "placeholder": "Confirmer votre mot de passe"
      },
      "label": "Confirmation du mot de passe"
    }) }}

    {{ form_widget(form) }}
    <div class="row justify-content-center align-items-center">
      <input type="submit" class="btn btn-primary rounded-pill w-75" value="Register">
    </div>
    {{ form_end(form) }}
  </div>
</div>


{% endblock %}
