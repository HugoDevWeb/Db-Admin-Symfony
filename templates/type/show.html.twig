{% extends 'base.html.twig' %}

{% block title %}Hello TypeController!{% endblock %}

{% block h1 %} Liste des aliments appartenant aux {{ type.wording }}{% endblock %}
{% block body %}
    <div class="row align-items-center">
        {% for food in type.foods %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-secondary mb-3 mx-auto" style="max-width: 20rem">
                    <div class="card-header text-center">
                        <img src="{{ asset("images/foods/" ~ food.image) }}" alt="" class="perso_imgFood card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-info">{{ food.name }}</h3>
                        <h4 class="text-center">Type: {{ food.type.wording }}</h4>
                        <div class="card-text">
                            <h4 class="text-center">Price (kilo) : {{ food.price }}</h4>
                            <table class="table card-table">
                                <tr class="table-primary">
                                    <td>Property</td>
                                    <td>Value (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{ food.calorie }}</td>
                                </tr>
                                <tr>
                                    <td>Carbohydrate</td>
                                    <td>{{ food.carbohydrate }}</td>
                                </tr>
                                <tr>
                                    <td>Protein</td>
                                    <td>{{ food.protein }}</td>
                                </tr>
                                <tr>
                                    <td>Lipid</td>
                                    <td>{{ food.lipid }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}
    </div>

{% endblock %}
