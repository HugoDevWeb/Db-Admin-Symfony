{% extends 'base.html.twig' %}

{% block title %}Hello FoodController!{% endblock %}


{% block h1 %} Liste de tous les aliments
    {% if isCalorie %}
        avec moins de 50 calories
    {% elseif isCarbohydrate %}
        avec moins de 5g de glucides
    {% endif %}
{% endblock %}

{% block body %}
    <div class="mb-2">
        <a class="btn btn-primary text-white bg-primary rounded mr-2"
           href="{{ path("food.index") }}">Tous</a>
        <a class="btn btn-primary text-white bg-primary rounded mr-2"
           href="{{ path("food.per.calorie", {"calorie": 50}) }}">Foods with less than 50 calories</a>
        <a class="btn btn-primary text-white bg-primary rounded "
           href="{{ path("food.per.carbohydrate", {"carbohydrate": 5}) }}">Foods with less than 5g of carbohydrate</a>
    </div>

    <div class="row">
        {% for food in foods %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-secondary mb-3 mx-auto" style="max-width: 20rem">
                    <div class="card-header text-center">
                        <img src="{{ asset("images/foods/" ~ food.image) }}" alt="" class="perso_imgFood card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-info">{{ food.name }}</h3>
                        <div class="card-text">
                            <h4 class="text-center">Price (kilo) : {{ food.price }}</h4>
                            <table class="table card-table">
                                <tr class="table-primary">
                                    <td>Property</td>
                                    <td>Value (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{ food.calorie }}</td>
                                </tr>
                                <tr>
                                    <td>Carbohydrate</td>
                                    <td>{{ food.carbohydrate }}</td>
                                </tr>
                                <tr>
                                    <td>Protein</td>
                                    <td>{{ food.protein }}</td>
                                </tr>
                                <tr>
                                    <td>Lipid</td>
                                    <td>{{ food.lipid }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}
    </div>
{% endblock %}
